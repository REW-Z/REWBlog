@model REWBlogModel.ARTICLES

@{
    ViewBag.Title = "Index";
}

<h2>文章详情</h2>

<div class="card">
    <p style="font-size:24px;text-align:center;">
        <b>@Model.A_NAME</b>
    </p>
    <br />
    @{
        <div id="editor_md">
            @Html.TextAreaFor(x => x.A_CONTENT)
        </div>
    }

    <script src="~/Addons/editor.md-1.5.0/lib/marked.min.js"></script>
    <script type="text/javascript">

        var editormdView;
        editormdView = editormd.markdownToHTML("editor_md", {
            htmlDecode: "style,script,iframe",  // you can filter tags decode
            emoji: true,
            taskList: true,
            tex: true,  // 默认不解析
            flowChart: true,  // 默认不解析
            sequenceDiagram: true,  // 默认不解析
        });
    </script>

</div>


